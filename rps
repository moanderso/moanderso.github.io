    <head>
background="https://media.salon.com/2014/08/guy_fieri.jpg"
        <link rel="stylesheet" type="text/css" href="css3.css"/>
005
        <script type="text/javascript">
006
 
007
        //Global Variables
008
        var painted;
009
        var content;
010
        var winningCombinations;
011
        var turn = 0;
012
        var theCanvas;
013
        var c;
014
        var cxt;
015
        var squaresFilled = 0;
016
        var w;
017
        var y;
018
 
019
        //Instanciate Arrays
020
        window.onload=function(){
021
             
022
            painted = new Array();
023
            content = new Array();
024
            winningCombinations = [[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];
025
 
026
            for(var l = 0; l <= 8; l++){
027
            painted[l] = false;
028
            content[l]='';
029
            }
030
        }
031
 
032
        //Game methods
033
        function canvasClicked(canvasNumber){
034
            theCanvas = "canvas"+canvasNumber;
035
            c = document.getElementById(theCanvas);
036
            cxt = c.getContext("2d");
037
 
038
            if(painted[canvasNumber-1] ==false){
039
                if(turn%2==0){
040
                    cxt.beginPath();
041
                    cxt.moveTo(10,10);
042
                    cxt.lineTo(40,40);
043
                    cxt.moveTo(40,10);
044
                    cxt.lineTo(10,40);
045
                    cxt.stroke();
046
                    cxt.closePath();
047
                    content[canvasNumber-1] = 'X';
048
                }
049
 
050
                else{
051
                    cxt.beginPath();
052
                    cxt.arc(25,25,20,0,Math.PI*2,true);
053
                    cxt.stroke();
054
                    cxt.closePath();
055
                    content[canvasNumber-1] = 'O';
056
                }
057
 
058
                turn++;
059
                painted[canvasNumber-1] = true;
060
                squaresFilled++;
061
                checkForWinners(content[canvasNumber-1]);
062
 
063
                if(squaresFilled==9){
064
                    alert("THE GAME IS OVER!");
065
                    location.reload(true);
066
                }
067
             
068
            }
069
            else{
070
                alert("YOU CAN'T DO THAT!");
071
            }
072
 
073
        }
074
 
075
        function checkForWinners(symbol){
076
             
077
            for(var a = 0; a < winningCombinations.length; a++){
078
            if(content[winningCombinations[a][0]]==symbol&&content[winningCombinations[a][1]]== symbol&&content[winningCombinations[a][2]]==symbol){
079
                alert(symbol+ " WON!YAY!");
080
                playAgain();
081
            }
082
            }
083
 
084
        }
085
 
086
        function playAgain(){
087
            y=confirm("PLAY AGAIN?");
088
            if(y==true){
089
                alert("OKAY! ^^/>");
090
                location.reload(true);
091
            }
092
            else{
093
                alert("BYE!");
094
        }
095
 
096
        }
097
 
098
 
099
        </script>
